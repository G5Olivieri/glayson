<%= form_with model: task, class: 'app__form' do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="app__form__control app__form__control__text">
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: 'autofocus', class: 'app__form__text' %>
  </div>
  <div class="app__form__control">
    <%= form.label :done %>
    <%= form.check_box :done, class: 'app__form__checkbox' %>
  </div>

  <%= render 'shared/authorization_form', form: form %>

  <div class="app__form__control">
    <%= form.submit class: 'app__form__submit' %>
  </div>
<% end %>
