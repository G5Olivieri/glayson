<h1>Name: <%= @task.name %></h1>
<h1>Done: <%= @task.done %></h1>

<nav>
<% if policy(@task).update? %>
  <%= link_to 'Edit', edit_task_path(@task) %>
<% end %>
<% if policy(@task).destroy? %>
  <%= link_to 'Destroy', @task, data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %>
<% end %>
</nav>
