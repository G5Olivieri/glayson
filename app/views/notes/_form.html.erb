<%= form_with model: note, class: 'app__form' do |form| %>
  <div class="app__form__control app__form__control__text">
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: 'autofocus', class: 'app__form__text' %>
  </div>

  <%= render 'shared/authorization_form', form: form %>

  <div class="">
    <%= form.rich_text_area :body %>
  </div>

  <div class="app__form__control">
    <%= form.submit class: 'app__form__submit' %>
  </div>
<% end %>
