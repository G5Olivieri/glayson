<h1><%= @transaction.name %></h1>
<p><%= number_to_currency(@transaction.amount / 100.00, unit: 'R$', separator: ',', delimiter: '.') %></p>
<p><%= @transaction.datetime.to_date %></p>
<p><%= @transaction.description %></p>

<nav>
<% if policy(@transaction).update? %>
  <%= link_to 'Edit', edit_transaction_path(@transaction) %>
<% end %>
<% if policy(@transaction).destroy? %>
  <%= link_to 'Destroy', @transaction, data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %>
<% end %>
</nav>
