<%= form_with model: transaction, class: 'app__form' do |form| %>
  <div class="app__form__control app__form__control__text">
    <%= form.label :name %>
    <%= form.text_field :name, autofocus: 'autofocus', class: 'app__form__text' %>
  </div>
  <div class="app__form__control app__form__control__text">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: 'app__form__text' %>
  </div>

  <div class="app__form__control app__form__control__text">
    <%= form.label :datetime %>
    <%= form.date_field :datetime, class: 'app__form__text' %>
  </div>

  <div class="app__form__control app__form__control__text">
    <%= form.label :transaction_type %>
    <%= form.select :transaction_type, ['expense', 'income'], {}, {class: 'app__form__text'} %>
  </div>

  <div class="app__form__control app__form__control__text">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'app__form__text' %>
  </div>

  <div class="app__form__control app__form__control__text">
    <%= form.label :transaction_promise_id %>
    <%= form.number_field :transaction_promise_id, class: 'app__form__text' %>
  </div>

  <%= render 'shared/authorization_form', form: form %>

  <div class="app__form__control app__form__text">
    <%= form.submit class: 'app__form__submit' %>
  </div>
<% end %>
